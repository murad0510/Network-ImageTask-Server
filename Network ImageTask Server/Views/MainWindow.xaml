<Window x:Class="Network_ImageTask_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_ImageTask_Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Button Command="{Binding SendButtonCommand}" Width="210" Height="70" Margin="195,334,195,30" Content="Connection" FontSize="40" Canvas.Top="250" Background="DeepSkyBlue" Foreground="White" Canvas.Left="20">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>


        <ScrollViewer>
            <StackPanel Margin="0,0,0,130" Background="Transparent" Height="300" Name="MyStackPanel">

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
