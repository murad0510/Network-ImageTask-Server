<UserControl x:Class="Network_ImageTask_Server.Views.UserControls.SenderImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Network_ImageTask_Server.Views.UserControls"
             mc:Ignorable="d" 
             Height="250" Width="500" Background="Black" Margin="20">
    <Grid>
        <Image Source="{Binding Image}" Margin="10"></Image>
    </Grid>
</UserControl>
